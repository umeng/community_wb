<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.taobao.android</groupId>
        <artifactId>agoo_sdk_android</artifactId>
        <version>2.1.4.24.umeng</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>agoo-core</artifactId>
    <version>2.1.4.24.umeng</version>
    <packaging>jar</packaging>
    <name>agoo-core</name>
    <properties>
        <agoo.sdk.version>2.1.4.24.umeng</agoo.sdk.version>
        <android-version>4.2.2</android-version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.taobao.android</groupId>
            <artifactId>agoo-basic</artifactId>
            <version>${agoo.sdk.version}</version>
        </dependency>
        <dependency>
            <groupId>com.taobao.android</groupId>
            <artifactId>agoo-android</artifactId>
            <version>${agoo.sdk.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>android</artifactId>
            <version>${android-version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.taobao.3rd.google.android.support</groupId>
            <artifactId>android-support-v4</artifactId>
            <version>r12</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.google.android</groupId>
            <artifactId>annotations</artifactId>
            <version>4.1.1.4</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
			<groupId>com.ut.utdid</groupId>
			<artifactId>utdid4all</artifactId>
			<version>1.1.0-Release-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <testSourceDirectory>src/test/java</testSourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
